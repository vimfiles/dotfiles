[[ -s "$HOME/.projectrc" ]] && source "$HOME/.projectrc"
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"

source ~/.bash/aliases
source ~/.bash/completions
source ~/.bash/config

[[ -s "$HOME/.localrc" ]] && source "$HOME/.localrc"

PATH=$PATH:$HOME/.rvm/bin # Add RVM to PATH for scripting
