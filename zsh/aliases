# cd
alias ..='cd ..'

# ls
alias ls="ls -laG"

# less
alias lg='less +G'

# git
alias g='git'
alias grh='git reset --hard'
function gpo() {
  if [ $# -eq 1 ]
  then
    git push origin $1
  else
    echo "Usage: gpo <branchname>"
  fi
}

platform=`uname`
if [[ "$platform" == 'Darwin' ]]
then
  alias gg='gitx -c'
  alias gk='gitx --all'
else
  alias gg='git gui &'
  alias gk='gitk --all &'
fi
alias gp='git pull'
alias gpr='git pull --rebase'
alias gb='git branch -a'
alias gru='git remote update'
alias grm='git rebase origin/master'
alias stashpull='git stash && git pull && git stash pop'

# rails
alias b=bundle
alias ber='bundle exec rspec'
alias r='rails'
alias rc='rails console'
alias rs='rails server'
alias rg='rails g'
alias rk=rake
alias s='rake spec'

# padrino
alias p=padrino
alias p_s='padrino start'
alias pg='padrino generate'
alias pr='padrino rake'
alias pc='padrino console'
alias prs='padrino rake spec'

# various
alias gv='gvim .'
alias v='mvim .'
alias c=clear
alias cl='clear && ls -la'
alias h='cd ~'
alias o='open'

function proj() {
  if [ $# -eq 1 ]
  then
    if [ -d ~/dev/$1 ]
    then
      cd ~/dev/$1
    else
      echo "Project folder does not exist"
      cd ~/dev/
    fi
  else
    cd ~/dev/
  fi
}

# screen
function scr() {
  screen -D -R -c ~/.screenrc-$1
}

# linux
alias sagu='sudo apt-get update'
alias sagU='sudo apt-get upgrade'

# set background on ssh connection
if [[ -f /usr/bin/set-bg-host ]]
then
  alias ssh=sshb

  if [ ! -z $PS1 ]; then
    hostname=`hostname`
    name=`/usr/bin/base-hostname $hostname`
    name=`echo $name | tr "[A-Z]" "[a-z]"`
    /usr/bin/set-bg-host "$name"
  fi
fi

