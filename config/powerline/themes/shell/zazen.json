{
	"default_module": "powerline.segments.common",
	"segments": {
		"left": [
			{
				"module": "powerline.segments.shell",
				"name": "mode"
			},
			{
				"name": "hostname",
				"priority": 10,
        "args": { "only_if_ssh": true, "exclude_domain": true }
			},
			{
				"name": "user",
				"priority": 30
			},
			{
				"name": "virtualenv",
				"priority": 50
			},
			{
				"name": "cwd",
				"priority": 10,
        "args": {
          "dir_limit_depth": 1
        }
			},
			{
				"name": "branch",
				"priority": 40,
        "args": { "status_colors": true }
			},
			{
				"module": "powerline.segments.shell",
				"name": "jobnum",
				"priority": 20
			}
		],
		"right": [
			{
				"module": "powerline.segments.shell",
				"name": "last_pipe_status",
				"priority": 10
			},
			{
				"name": "date",
				"priority": 10,
        "args": { "istime": true, "format": "%H:%M"}
			}
		]
	}
}
